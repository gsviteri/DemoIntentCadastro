<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.fiap.demointentcadastro" >

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="br.com.fiap.demointentcadastro.PessoaFisicaActivity"
            android:label="@string/title_activity_pessoa_fisica" >

            <intent-filter>
                <action android:name="br.com.fiap.demointentcadastro.action.CADASTRO"></action>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="br.com.fiap.demointentcadastro.action.PESSOA_FISICA" />
            </intent-filter>

        </activity>
        <activity
            android:name="br.com.fiap.demointentcadastro.PessoaJuridicaActivity"
            android:label="@string/title_activity_pessoa_juridica" >
            <intent-filter>
                <action android:name="br.com.fiap.demointentcadastro.action.CADASTRO"></action>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="br.com.fiap.demointentcadastro.action.PESSOA_JURIDICA" />
            </intent-filter>

        </activity>
        <activity
            android:name="br.com.fiap.demointentcadastro.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
